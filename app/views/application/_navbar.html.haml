#navbar
  .nav
    %ul
      = nav_path t("titles.home"), root_path
      = nav_path t("titles.projects.index"), projects_path if can? :read, Project
      = nav_path t("navbar.entries"), user_entries_path(current_user)
  - localized_cache current_user do
    .nav-user
      %ul
        %li= link_to 'All Timecards', all_timecards_daily_updates_path(all: true) if can? :all_timecards, DailyUpdate
        %li#user-nav.dropdown
          %a{:href => "javascript:void(0)"}
            = current_user.first_name
            %span.caret
          .dropdown-custom-menu
            .dropdown-arrow-link
            .dropdown-content-link
              .user-info
                = render "application/avatar", user: current_user, easter: easter?
                %span.user-name= current_user.first_name
              %ul
                %li= link_to t("titles.categories.index"), categories_path #if can? :read, Category
                %li= link_to t("titles.users.index"), users_path #if can? :read, User
                %li= link_to t("titles.billables.index"), billables_path
                %li= link_to t("titles.projects.index"), projects_path #if can? :read, Project
                %li= link_to t("titles.clients.index"), clients_path #if can? :read, Client
                %li= link_to t("titles.archives.index"), archives_path
                %li= link_to t("titles.reports.index"), reports_path
                %li= link_to t("navbar.dropdown.edit_user"), edit_user_path(current_user) #if can? :edit, current_user
                %li= link_to t("titles.accounts.edit"), edit_account_path #if can? :edit, Account
                - if Hours.helpful_enabled?
                  %li
                    .modal
                      %label{:for => "modal-1"}
                        %a Help me!
                      %input#modal-1.modal-state{:type => "checkbox"}/
                      = render 'modal'
                %li.devider
                %li= link_to t("sign_out"), destroy_user_session_path
