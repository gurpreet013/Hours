
.container
  %h1= title
  .row
    .col-md-8
      .users-overview
        .card.bg-light
          .card-body
            %table
              %thead
                %th
                  User Name
                %th
                  User Email
                %th
                %th

              %tbody
                - @users.each do |user|
                  %tr
                    %td
                      = link_to_if(can?(:show, user), user.full_name, user_path(user)) if user.confirmed?
                    %td= user.email
                    %td
                      - unless user.accepted_or_not_invited?
                        = t("users.invitation_sent_at",                            |
                          time_ago: time_ago_in_words(user.invitation_created_at)) |
                    %td
                      .btn-group.pull-right.mr-2
                        .dropdown.dropdown-menu-right
                          - if can? :edit, user
                            =link_to '', 'javascript:void(0)', class: 'btn btn-sm btn-link dropdown-toggle', data: { toggle: "dropdown" }
                            .dropdown-menu
                              - if can? :edit, user
                                = link_to 'Edit', edit_user_path(user), class: 'dropdown-item'
                              - if can? :edit, user
                                = link_to 'Change Access', projects_user_path(user), class: 'dropdown-item'

    .col-md-4
      .invitation-form
        = simple_form_for(User.new, url: user_invitation_path) do |f|
          = f.input :email, placeholder: t("users.email"), label: false, required: true
          = f.button :submit, t("users.invite")
